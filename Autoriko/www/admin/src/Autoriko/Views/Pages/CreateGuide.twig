{% extends "Layout.twig" %}

{% block style %}
<link rel="stylesheet" href="/assets/css/new_sequence.css">
{% endblock %}

{% block content %}
<h1>Création d'un guide </h1>

{% if flash.success %}
<div class="alert alert-success" role="alert">
  {{ flash.success }}
</div>
{% endif %}

{% if flash.error %}
<div class="alert alert-danger" role="alert">
  {{ flash.error }}
</div>
{% endif %}

<div class="box">
    <form action="{{ path_for('createGuide') }}" method="post">
    <div class="mb-3">
        <label for="titre_guide" class="form-label">Titre</label>
        <input type="text" placeholder="Entrer le titre " class="form-control" id="titre_guide" name="titre_guide" required>
    </div>
    <div class="mb-3">
        <label for="text_guide" class="form-label">Text</label>
        <textarea class="form-control" placeholder="Entrer le text " id="text_guide" name="text_guide" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-outline-success btn-sm">Créer le guide</button>
    </form>
</div>
{% endblock %}