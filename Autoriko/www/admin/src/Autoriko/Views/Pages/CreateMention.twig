{% extends "Layout.twig" %}

{% block style %}{% endblock %}

{% block content %}

	{% if flash.success %}
		<div class="alert alert-success" role="alert">
			{{ flash.success }}
		</div>
	{% endif %}

	{% if flash.error %}
		<div class="alert alert-danger" role="alert">
			{{ flash.error }}
		</div>
	{% endif %}

	<div class="col-sm-6">
		<form ui-jp="parsley" action="{{ path_for('createMention') }}" method="post">
			<div class="box">
				<div class="box-header">
					<h2>Créer une mention</h2>
				</div>
				<div class="box-body">
					<p class="text-muted">Tous les champs sont obligatoires.</p>
					<div class="row m-b">
						<div class="col-sm-6">
							<label for="titre_mention" class="form-label">TItre</label>
							<input type="text" placeholder="Entrer le titre " class="form-control" id="titre_mention" name="titre_mention" required>
						</div>
					</div>
					<div class="mb-3">
						<label for="text_mention" class="form-label">Text</label>
						<textarea class="form-control" placeholder="Entrer la mention " id="text_mention" name="text_mention" rows="3"></textarea>
					</div>
					<div class="dker p-a text-right">
						<button type="submit" class="btn info">Créer la mention</button>
					</div>
				</div>
			</div>
		</form>
	</div>
{% endblock %}
